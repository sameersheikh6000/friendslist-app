      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group mt-3">
    <%= form.text_field :first_name, class:"form-control", placeholder:"First Name" %>
  </div>

  <div class="field form-group mt-3">
    <%= form.text_field :last_name,class:"form-control", placeholder:"Last name" %>
  </div>

  <div class="field form-group mt-3">
    <%= form.text_field :email, class:"form-control", placeholder:"Email" %>
  </div>

  <div class="field form-group mt-3">
    <%= form.text_field :phone, class:"form-control", placeholder:"Contact" %>
  </div>

  <div class="field form-group mt-3">
    <%= form.text_field :social, class:"form-control", placeholder:"Social Media" %>
  </div>

  <div class="field">
    <%= form.number_field :user_id, value:current_user.id, id: :friend_user_id, type:"hidden" %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-secondary mt-4" %>
  </div>
